    "Background": "Resources/Audio/Songs/AmbientDungeonTheme.wav"
  },
  "Memory": {
    "GameobjectsPool": 500,
    "ComponentsPool": 500,
    "CustomPool": [
      [ "Transform", 500 ],
      [ "Body", 500 ]
