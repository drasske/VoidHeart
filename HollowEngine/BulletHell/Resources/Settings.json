    "DeferredShader": [ "Resources/Shaders/Global.vert", "Resources/Shaders/Global.frag" ],
    "ShadowMapShader": [ "Resources/Shaders/ShadowMap.vert", "Resources/Shaders/ShadowMap.frag" ],
    "DebugShader": [ "Resources/Shaders/Debug.vert", "Resources/Shaders/Debug.frag" ],
    "ParticleShader": [ "Resources/Shaders/ParticleSystem.vert", "Resources/Shaders/ParticleSystem.frag" ],
    "ParticleDataClearShader": [ "Resources/Shaders/PointParticleDataClear.comp", "Resources/Shaders/ModelParticleDataClear.comp" ],
